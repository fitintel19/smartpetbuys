{
  "name": "smartpetbuys-mobile-testing",
  "version": "1.0.0",
  "description": "Comprehensive mobile testing suite for SmartPetBuys",
  "main": "index.js",
  "scripts": {
    "test:mobile": "playwright test --config=playwright.config.js",
    "test:performance": "playwright test --config=playwright.performance.config.js",
    "test:accessibility": "playwright test --config=playwright.accessibility.config.js",
    "test:visual": "playwright test --config=playwright.visual.config.js",
    "test:all": "npm run test:mobile && npm run test:performance && npm run test:accessibility && npm run test:visual",
    "test:critical": "playwright test --grep=\"@critical\"",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:regression": "playwright test --grep=\"@regression\"",
    "test:device-matrix": "playwright test --config=playwright.device-matrix.config.js",
    "test:cross-browser": "playwright test --config=playwright.cross-browser.config.js",
    "report:generate": "playwright show-report",
    "report:html": "playwright show-report --port=9323",
    "install-browsers": "playwright install",
    "install-deps": "playwright install-deps"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "lighthouse": "^11.4.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "dependencies": {
    "axe-playwright": "^2.1.0",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7"
  },
  "keywords": [
    "mobile-testing",
    "playwright",
    "cross-browser",
    "performance",
    "accessibility",
    "visual-regression"
  ],
  "author": "SmartPetBuys Team",
  "license": "MIT"
}
